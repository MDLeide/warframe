<UserControl x:Class="Warframe.UI.Screens.Baro.BaroOfferingItemRowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warframe.UI.Screens.Baro"
             xmlns:items="clr-namespace:Warframe.UI.Components.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal"
                   HorizontalAlignment="Left">
            <TextBlock Text="{Binding Cost}"/>
            <TextBlock Text="Ducats"/>
            <items:ItemRowView DataContext="{Binding Item}"/>
        </StackPanel>
    </Grid>
</UserControl>
